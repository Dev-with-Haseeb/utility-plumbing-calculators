{
  "tool_id": "water-pressure-calculator",
  "tool_category": "plumbing",
  "intent_type": "calculate",
  "tool_name": "Water Pressure Calculator",
  "tool_purpose": "Calculates water pressure based on vertical water height.",
  "inputs": [
    {
      "input_id": "water_height",
      "label": "Water Height",
      "type": "number",
      "unit": "meters",
      "constraints": {
        "min": 0.1,
        "required": true
      },
      "default_value": 10,
      "explanation": "Vertical height of the water column."
    }
  ],
  "calculation_logic": {
    "variables": {
      "height_m": "water_height"
    },
    "formula": "(height_m * 9.80665) / 100",
    "rounding": {
      "decimals": 2,
      "method": "round"
    }
  },
  "outputs": [
    {
      "output_id": "pressure_bar",
      "label": "Water Pressure",
      "unit": "bar",
      "description": "Water pressure generated by the given height."
    }
  ],
  "assumptions": [
    "Fresh water at standard gravity.",
    "No pressure losses."
  ],
  "seo": {
    "title_template": "Water Pressure Calculator",
    "meta_description": "Calculate water pressure from height using standard gravity."
  },
  "structured_data": {
    "applicationCategory": "ConstructionCalculator",
